{
  "compilerOptions": {
    "paths": {
      "*": ["node_modules", "src/*"]
    },
    "target": "esnext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "example"
  ]
}
